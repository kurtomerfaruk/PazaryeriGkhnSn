@{
    ViewData["Title"] = "İadeler";
}

@model IEnumerable<Claim>

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block">İade Yönetimi</h3>
    </div>
    <div class="content-header-right col-md-6 col-12">
        <div class="dropdown float-md-right">
            <button class="btn btn-primary dropdown-toggle px-2" id="dropdownBreadcrumbButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">İadeleri Çek</button>
            <div class="dropdown-menu" aria-labelledby="dropdownBreadcrumbButton">
                @foreach (var platform in ViewBag.Platforms)
                {
                    <a class="dropdown-item fetch-platform" href="#" data-platform="@platform">@platform</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="claimTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Platform</th>
                    <th>Sipariş No</th>
                    <th>Müşteri</th>
                    <th>Sipariş Tarihi</th>
                    <th>İade Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts {


    <script>
        $(document).ready(function () {
            var table = $('#claimTable').DataTable({
                processing: true,
                serverSide: true,
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5',
                    'pdfHtml5'
                ],
                ajax: {
                    url: '@Url.Action("GetClaims")',
                    type: 'POST'
                },
                drawCallback: function (settings, json) {
                    $('[data-toggle="tooltip"]').tooltip();
                },
                columns: [
                    { data: 'id', name: 'id' },
                    { data: 'platform', name: 'platform' },
                    { data: 'orderNumber', name: 'orderNumber' },
                    { data: 'customerName', name: 'customerName' },
                    { data: 'orderDate', name: 'orderDate' },
                    { data: 'claimDate', name: 'claimDate' },
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            return `<button class="btn btn-sm btn-info details-btn" data-id="${row.id}" data-toggle="tooltip" title="Detay">
                                <i class="la la-eye"></i>
                                </button>`;

                        },
                        orderable: false
                    },
                ],
                order: [[0, 'desc']],
                language: {
                    url: '../i18n/tr.json'
                }
            });

            $('.fetch-platform').click(function (e) {
                e.preventDefault();
                var platform = $(this).data('platform');
                var $btn = $('.btn-primary.dropdown-toggle');

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Çekiliyor...');

                var url = '@Url.Action("FetchTrendyolClaims")';

                var data = platform === 'all' ? {} : { platform: platform };

                $.post(url, data)
                    .done(function (response) {
                        if (response.success) {
                            table.ajax.reload();
                            if (platform === 'all' && response.details) {
                                var details = response.details.map(d =>
                                    `${d.platform}: ${d.added}/${d.total} sipariş`
                                ).join('\n');
                                toastr.success(response.message + '\n' + details);
                            } else {
                                toastr.success(response.message);
                            }
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Kategoriler çekilirken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i> Kategorileri Çek');
                    });
            });

            $('#claimTable').on('click', '.details-btn', function () {
                var claimId = $(this).data('id');
                showClaimDetails(claimId);
            });

            function showClaimDetails(claimId) {
                $.get('@Url.Action("GetClaimDetails")', { id: claimId })
                    .done(function (response) {
                        if (response.success) {
                            showClaimDetailsModal(response);
                        } else {
                            console.log(response.message);
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Detaylar yüklenirken hata oluştu.');
                    });
            }

            function showClaimDetailsModal(data) {
                var modalHtml = `
                            <div class="modal fade" id="claimDetailsModal" tabindex="-1">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Sipariş İade Detayları - ${data.claim.trendyolClaimId} </h5>
                                            <button type="button" class="btn-close" data-dismiss="modal">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- Tab navigasyon -->
                                            <ul class="nav nav-tabs" id="claimTabs" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link active" data-toggle="tab" data-target="#claimInfo">
                                                        İade Bilgisi
                                                    </button>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link" data-toggle="tab" data-target="#claimItems">
                                                        İade Detayları
                                                    </button>
                                                </li>
                                            </ul>

                                            <div class="tab-content mt-3" id="orderTabContent">
                                                <div class="tab-pane fade show active" id="claimInfo">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <table class="table table-sm">
                                                                <tr><th>Sipariş No:</th><td>${data.claim.orderNumber}</td></tr>
                                                                <tr><th>Müşteri Adı:</th><td>${data.claim.customerName}</td></tr>
                                                                <tr><th>Kargo No:</th><td>${data.claim.cargoTrackingNumber}</td></tr>
                                                                <tr><th>Sipariş Paket No:</th><td>${data.claim.orderShipmentPackageId}</td></tr>
                                                            </table>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <table class="table table-sm">
                                                                <tr><th>Sipariş Tarihi:</th><td>${data.claim.orderDate}</td></tr>
                                                                <tr><th>İade Tarihi:</th><td>${data.claim.claimDate}</td></tr>
                                                                <tr><th>Kargo Adı:</th><td>${data.claim.cargoName}</td></tr>
                                                                <tr><th>Güncelleme Tarihi:</th><td>${data.claim.lastModifiedDate}</td></tr>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Ürünler -->
                                                <div class="tab-pane fade" id="claimItems">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <table class="table table-sm">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Ürün Adı</th>
                                                                        <th>Barkod</th>
                                                                        <th>Stok Kodu</th>
                                                                        <th>Renk</th>
                                                                        <th>Beden</th>
                                                                        <th>Fiyat</th>
                                                                        <th>Kategori</th>
                                                                    </tr>
                                                                </thead>
                                                                 ${data.trendyols[0].items.map(item => `
                                                                     <tr>
                                                                         <td>${item.orderLine.productName}</td>
                                                                         <td>${item.orderLine.barcode}</td>
                                                                         <td>${item.orderLine.merchantSku}</td>
                                                                         <td>${item.orderLine.productColor}</td>
                                                                         <td>${item.orderLine.productSize}</td>
                                                                         <td>${item.orderLine.price}</td>
                                                                         <td>${item.orderLine.productCategory}</td>
                                                                     </tr>
                                                                 `).join('')}
                                                            </table>
                                                        </div>
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table id="claimDetailTable" class="table table-striped table-sm">
                                                            <thead>
                                                                <tr>
                                                                    <th>Müşteri İade Nedeni</th>
                                                                    <th>Trendyol İade Nedeni</th>
                                                                    <th>Durum</th>
                                                                    <th>İşlem</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                 ${data.trendyols[0].items.map(item => `
                                                                     ${item.claimItems.map(claim => `
                                                                        <tr>
                                                                            <td>${claim.customerClaimItemReason.name}</td>
                                                                            <td>${claim.trendyolClaimItemReason.name}</td>
                                                                            <td>${claim.claimItemStatus.name}</td>
                                                                            <td>${claim.claimItemStatus.name == "WaitingInAction" ? '<button class="btn btn-info approve-claim" data-claimid="${data.claim.id}" data-lineid="${claim.id}"><i class="la la-check"></id></button>' :''}</td>
                                                                          
                                                                        </tr>
                                                                    `).join('')}
                                                                 `).join('')}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;

                $('body').append(modalHtml);
                var modal = new bootstrap.Modal(document.getElementById('claimDetailsModal'));
                modal.show();

                $('#claimDetailsModal').on('hidden.bs.modal', function () {
                    $(this).remove();
                });

                $(".approve-claim").on('click', function () {
                    var claimId = $(this).data("claimid");
                    var lineId = $(this).data("lineid");

                    var data = { claimId: claimId, lineId: lineId };
                    var url = '@Url.Action("TrendyolApproveClaim")';

                    $.post(url, data)
                        .done(function (response) {
                            if (response.success) {
                                table.ajax.reload();
                                toastr.success(response.message);
                            } else {
                                toastr.error(response.message);
                            }
                        })
                        .fail(function () {
                            toastr.error('Kategoriler çekilirken hata oluştu.');
                        })
                        .always(function () {
                            $btn.prop('disabled', false).html('<i class="la la-check"></i>');
                        });
                })
            }


        });
    </script>

}