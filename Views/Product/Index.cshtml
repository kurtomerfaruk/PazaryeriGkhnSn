@{
    ViewData["Title"] = "Ürünler";
}

@model IEnumerable<Product>

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block">Ürün Yönetimi</h3>
    </div>
    <div class="content-header-right col-md-6 col-12">
        <div class="dropdown float-md-right">
            <button class="btn btn-primary dropdown-toggle px-2" id="dropdownBreadcrumbButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Ürünleri Çek</button>
            <div class="dropdown-menu" aria-labelledby="dropdownBreadcrumbButton">
                @foreach (var platform in ViewBag.Platforms)
                {
                    <a class="dropdown-item fetch-platform" href="#" data-platform="@platform">@platform</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="productsTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Platform</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {

    <link href="~/app-assets/vendors/css/tables/datatable/datatables.min.css" rel="stylesheet" />
    <link href="~/app-assets/vendors/css/tables/extensions/buttons.datatables.min.css" rel="stylesheet" />
    <link href="~/app-assets/vendors/css/tables/datatable/buttons.bootstrap4.min.css" rel="stylesheet" />

    @*  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet"> *@
    <script src="~/app-assets/vendors/js/extensions/toastr.min.js"></script>
    <link href="~/app-assets/vendors/css/extensions/toastr.css" rel="stylesheet" />

    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.buttons.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/jszip.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/pdfmake.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/vfs_fonts.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.html5.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.print.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.colvis.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#productsTable').DataTable({
                processing: true,
                serverSide: true,
                    dom: 'Bfrtip',
                    buttons: [
                        'excelHtml5',
                        'pdfHtml5'
                    ],
                ajax: {
                    url: '@Url.Action("GetProducts")',
                    type: 'POST'
                },
                 drawCallback: function (settings, json) {
                    $('[data-toggle="tooltip"]').tooltip();
                },
                columns: [
                    { data: 'id',name:'id' },
                    { data: 'platform',name:'platform' },
                    { data: 'title',name:'title' },
                    { data: 'subtitle' ,name:'subtitle'},
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            var html =`<button class="btn btn-sm btn-info details-btn" data-id="${row.id}" data-toggle="tooltip" title="Detay">
                                        <i class="la la-eye"></i>
                                    </button>`;

                             return html;
                        },
                        orderable: false
                    },

                ],
                order: [[0, 'desc']],
                language: {
                    url: '../i18n/tr.json'
                }
            });

            $('.fetch-platform').click(function (e) {
                e.preventDefault();
                var platform = $(this).data('platform');
                var $btn = $('.btn-primary.dropdown-toggle');

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Çekiliyor...');

                var url = platform === 'Trendyol'
                    ? '@Url.Action("FetchTrendyolProducts")'
                    : '';

                var data = platform === 'all' ? {} : { platform: platform };

                $.post(url, data)
                    .done(function (response) {
                        console.log(JSON.stringify(response));
                        if (response.success) {
                            table.ajax.reload();
                            if (platform === 'all' && response.details) {
                                var details = response.details.map(d =>
                                    `${d.platform}: ${d.added}/${d.total} ürün`
                                ).join('\n');
                                toastr.success(response.message + '\n' + details);
                            } else {
                                toastr.success(response.message);
                            }
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Ürünler çekilirken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i> Ürünleri Çek');
                    });
            });

             $('#productsTable').on('click', '.details-btn', function () {
                var productId = $(this).data('id');
                showProductDetails(productId);
            });

            function showProductDetails(productId) {
                $.get('@Url.Action("GetProductDetails")', { id: productId })
                    .done(function (response) {
                        if (response.success) {
                            showProductDetailsModal(response);
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Detaylar yüklenirken hata oluştu.');
                    });
            }

            function showProductDetailsModal(data) {
                console.log(data);
            var modalHtml = `
                <div class="modal fade" id="productDetailsModal" tabindex="-1">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ürün Detayları - ${data.product.title}</h5>
                                <button type="button" class="btn-close" data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <!-- Tab navigasyon -->
                                <ul class="nav nav-tabs" id="orderTabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" data-toggle="tab" data-target="#productInfo">
                                            Sipariş Bilgisi
                                        </button>
                                    </li>
                                    ${data.items.map(item => `
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" data-toggle="tab" data-target="#productItems${item.id}">
                                                ${item.barcode}
                                            </button>
                                        </li>
                                    `).join('')}
                                </ul>

                                <div class="tab-content mt-3" id="productTabContent">
                                    <div class="tab-pane fade show active" id="productInfo">
                                        <table class="table table-sm">
                                            <tr><th>Başlık:</th><td>${data.product.title}</td></tr>
                                            <tr><th>Alt Başlık:</th><td>${data.product.subtitle}</td></tr>
                                            <tr><th>Açıklama:</th><td>${data.product.description}</td></tr>
                                         </table>
                                    </div>

                                    ${data.items.map(item => `
                                        <div class="tab-pane fade" id="productItems${item.id}">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <table class="table table-sm">
                                                        <tr><th>Barkod :</th><td>${item.barcode}</td></tr>
                                                        <tr><th>Marka :</th><td>${item.brand?.name}</td></tr>
                                                        <tr><th>Liste Fiyatı :</th><td>${item.listPrice}</td></tr>
                                                    </table>
                                                </div>
                                                <div class="col-md-6">
                                                    <table class="table table-sm">
                                                    <tr><th>Miktar:</th><td>${item.quantity}</td></tr>
                                                    <tr><th>Kategori:</th><td>${item.category?.title}</td></tr>
                                                    <tr><th>Satış Fiyatı:</th><td>${item.salePrice}</td></tr>
                                                </table>
                                                </div>
                                            </div>
                                        </div>
                                    `).join('')}

                                    <!-- Ürünler -->
                                    
                                    <div class="tab-pane fade" id="addressInfo">
                                       
                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('body').append(modalHtml);
            var modal = new bootstrap.Modal(document.getElementById('productDetailsModal'));
            modal.show();

            $('#productDetailsModal').on('hidden.bs.modal', function () {
                $(this).remove();
            });
        }
        });
    </script>
}