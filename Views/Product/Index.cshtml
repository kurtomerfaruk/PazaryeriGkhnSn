    <script src="~/app-assets/vendors/js/extensions/toastr.min.js"></script>
    <link href="~/app-assets/vendors/css/extensions/toastr.css" rel="stylesheet" />

    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.buttons.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/jszip.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/pdfmake.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/vfs_fonts.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.html5.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.print.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.colvis.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#productsTable').DataTable({
                processing: true,
                serverSide: true,
                    dom: 'Bfrtip',
                    buttons: [
                        'excelHtml5',
                        'pdfHtml5'
                    ],
                ajax: {
                    url: '@Url.Action("GetProducts")',
                    type: 'POST'
                },
                 drawCallback: function (settings, json) {
                    $('[data-toggle="tooltip"]').tooltip();
                },
                columns: [
                    { data: 'id',name:'id' },
                    { data: 'title',name:'title' },
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            var html =`<a href="/Product/Edit/${row.id}" class="btn btn-warning btn-sm">Güncelle</a>
                                    <button class="btn btn-sm btn-info trendyol-update-btn" data-id="${row.id}" data-toggle="tooltip" title="Trendyol'a Gönder">
                                        <i class="la la-send"></i>
                                    </button>
                                    `;

                             return html;
                        },
                        orderable: false
                    },

                ],
                order: [[0, 'desc']],
                language: {
                    url: '../i18n/tr.json'
                }
            });

            $('.fetch-platform').click(function (e) {
                e.preventDefault();
                var platform = $(this).data('platform');
                var $btn = $('.fetch-platform');

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Çekiliyor...');

                var url = '@Url.Action("FetchTrendyolProducts")';

                var data = platform === 'all' ? {} : { platform: platform };

                $.post(url, data)
                    .done(function (response) {
                        console.log(JSON.stringify(response));
                        if (response.success) {
                            table.ajax.reload();
                            if (platform === 'all' && response.details) {
                                var details = response.details.map(d =>
                                    `${d.platform}: ${d.added}/${d.total} ürün`
                                ).join('\n');
                                toastr.success(response.message + '\n' + details);
                            } else {
                                toastr.success(response.message);
                            }
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Ürünler çekilirken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i>Trendyoldan Ürün Çek');
                    });
            });

            $('#productsTable').on('click', '.trendyol-update-btn', function (e) {
                e.preventDefault();
                console.log("deneme");
                var $btn = $('.trendyol-update-btn');
                var id = $(this).data('id');

                var data = { id: id};

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Gönderiliyor...');

                var url ='@Url.Action("SendTrendyol")';

                $.post(url, data)
                    .done(function (response) {
                        console.log(JSON.stringify(response));
                        if (response.success) {
                            table.ajax.reload();
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Ürün gönderilirken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i> Trendyola Gönder');
                    });
            });

             $('#productsTable').on('click', '.details-btn', function () {
                var productId = $(this).data('id');
                showProductDetails(productId);
            });

            function showProductDetails(productId) {
                $.get('@Url.Action("GetProductDetails")', { id: productId })
                    .done(function (response) {
                        if (response.success) {
                            showProductDetailsModal(response);
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Detaylar yüklenirken hata oluştu.');
                    });
            }

            function showProductDetailsModal(data) {
            var modalHtml = `
                <div class="modal fade" id="productDetailsModal" tabindex="-1">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ürün Detayları - ${data.product.title}</h5>
                                <button type="button" class="btn-close" data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <!-- Tab navigasyon -->
                                <ul class="nav nav-tabs" id="orderTabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" data-toggle="tab" data-target="#productInfo">
                                            Sipariş Bilgisi
                                        </button>
                                    </li>
                                    ${data.items.map(item => `
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" data-toggle="tab" data-target="#productItems${item.id}">
                                                ${item.barcode}
                                            </button>
                                        </li>
                                    `).join('')}
                                </ul>

                                <div class="tab-content mt-3" id="productTabContent">
                                    <div class="tab-pane fade show active" id="productInfo">
                                        <table class="table table-sm">
                                            <tr><th>Başlık:</th><td>${data.product.title}</td></tr>
                                            <tr><th>Alt Başlık:</th><td>${data.product.subtitle}</td></tr>
                                            <tr><th>Açıklama:</th><td>${data.product.description}</td></tr>
                                         </table>
                                    </div>

                                    ${data.items.map(item => `
                                        <div class="tab-pane fade" id="productItems${item.id}">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <table class="table table-sm">
                                                        <tr><th>Barkod :</th><td>${item.barcode}</td></tr>
                                                        <tr><th>Marka :</th><td>${item.brand?.name}</td></tr>
                                                        <tr><th>Liste Fiyatı :</th><td>${item.listPrice}</td></tr>
                                                        <tr><th>Onay Durumu:</th><td>${item.approveStatus ? 'Onaylı' :'Onaylı Değil'}</td></tr>
                                                    </table>
                                                </div>
                                                <div class="col-md-6">
                                                    <table class="table table-sm">
                                                    <tr><th>Miktar:</th><td>${item.quantity}</td></tr>
                                                    <tr><th>Kategori:</th><td>${item.category?.title}</td></tr>
                                                    <tr><th>Satış Fiyatı:</th><td>${item.salePrice}</td></tr>
                                                    <tr><th>Satış Durumu :</th><td>${item.saleStatus ? 'Satışta' :'Satışta Değil'}</td></tr>
                                                </table>
                                                </div>
                                            </div>
                                        </div>
                                    `).join('')}

                                    <!-- Ürünler -->

                                    <div class="tab-pane fade" id="addressInfo">

                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('body').append(modalHtml);
            var modal = new bootstrap.Modal(document.getElementById('productDetailsModal'));
            modal.show();

            $('#productDetailsModal').on('hidden.bs.modal', function () {
                $(this).remove();
            });
        }
        });

                document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('importExcelForm');
            const fileInput = document.getElementById('excelFile');
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            const loadingSpinner = document.getElementById('loadingSpinner');

            form.addEventListener('submit', function(e) {
                e.preventDefault();

                const file = fileInput.files[0];
                if (!file) {
                    toastr.warning('Lütfen bir Excel dosyası seçin');
                    return;
                }

                const allowedTypes = ['application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'];
                if (!allowedTypes.includes(file.type)) {
                    toastr.warning('Lütfen geçerli bir Excel dosyası seçin (.xlsx, .xls).')
                    return;
                }

                uploadFile(file);
            });

            function uploadFile(file) {
                const formData = new FormData();
                formData.append('file', file);

                setLoadingState(true);

                fetch('/Product/ImportExcel', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(err => { throw err; });
                    }
                    return response.json();
                })
                .then(data => {
                    toastr.success('İşlem Başarıyla tamamlandı!')

                    if (data.batchRequestId) {
                        var message = `İşlem Detayları: \n
                                        Batch ID:${batchRequestId}
                                        İşlenen Ürün:${processedItems || 0} adet
                                        `;
                        toastr.success(message);
                    }

                    form.reset();
                })
                .catch(error => {
                    console.error('Hata:', error);
                    const errorMessage = error.message || 'Dosya yüklenirken bir hata oluştu.';

                    toastr.error(errorMessage);
                })
                .finally(() => {
                    setLoadingState(false);
                });
            }

            function setLoadingState(isLoading) {
                if (isLoading) {
                    submitBtn.disabled = true;
                    submitText.classList.add('d-none');
                    loadingSpinner.classList.remove('d-none');
                } else {
                    submitBtn.disabled = false;
                    submitText.classList.remove('d-none');
                    loadingSpinner.classList.add('d-none');
                }
            }
        });

    </script>
}