﻿@{
ViewData["Title"] = "Sorular";
}

@model IEnumerable<Question>

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block">Soru Yönetimi</h3>
    </div>
    <div class="content-header-right col-md-6 col-12">
        <div class="dropdown float-md-right">
            <button class="btn btn-primary dropdown-toggle px-2" id="dropdownBreadcrumbButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Soruları Çek</button>
            <div class="dropdown-menu" aria-labelledby="dropdownBreadcrumbButton">
                @foreach (var platform in ViewBag.Platforms)
                {
                    <a class="dropdown-item fetch-platform" href="#" data-platform="@platform">@platform</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="questionTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Platform</th>
                    <th>Soru</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade text-left" id="questionDetailModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Sipariş Detayı</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label>Sipariş Tarihi</label>
                        <div class="form-group">
                            <input type="text" id="creationDate" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Cevaplanma Süresi</label>
                        <div class="form-group">
                            <input type="text" id="answeredDateMessage" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Ürün Adı</label>
                        <div class="form-group">
                            <input type="text" id="productName" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Durum</label>
                        <div class="form-group">
                            <input type="text" id="status" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>Soru</label>
                        <div class="form-group">
                            <textarea id="text" class="form-control" readonly></textarea>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <input type="hidden" id="questionId" />
                        <label>Cevap</label>
                        <div class="form-group">
                            <textarea id="answer" class="form-control" readonly></textarea>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-success" id="btnSave" style="display:none">Kaydet</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script>
        $(document).ready(function () {
            var table = $('#questionTable').DataTable({
                processing: true,
                serverSide: true,
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5',
                    'pdfHtml5'
                ],
                ajax: {
                    url: '@Url.Action("GetQuestions")',
                    type: 'POST'
                },
                drawCallback: function (settings, json) {
                    $('[data-toggle="tooltip"]').tooltip();
                },
                columns: [
                    { data: 'id', name: 'id' },
                    { data: 'platform', name: 'platform' },
                    { data: 'text', name: 'text' },
                    { data: 'status', name: 'status' },
                    { data: 'creationDate', name: 'creationDate' },
                    {
                        data: 'actions',
                        render: function (data, type, row) {
                            return `<button class="btn btn-sm btn-info details-btn" data-id="${row.id}" data-toggle="tooltip" title="Detay">
                                <i class="la la-eye"></i>
                                </button>`;

                        },
                        orderable: false
                    },
                ],
                order: [[0, 'desc']],
                language: {
                    url: '../i18n/tr.json'
                }
            });

            $('.fetch-platform').click(function (e) {
                e.preventDefault();
                var platform = $(this).data('platform');
                var $btn = $('.btn-primary.dropdown-toggle');

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Çekiliyor...');

                var url = '@Url.Action("FetchTrendyolQuestions")';

                var data = platform === 'all' ? {} : { platform: platform };

                $.post(url, data)
                    .done(function (response) {
                        if (response.success) {
                            table.ajax.reload();
                            if (platform === 'all' && response.details) {
                                var details = response.details.map(d =>
                                    `${d.platform}: ${d.added}/${d.total} sipariş`
                                ).join('\n');
                                toastr.success(response.message + '\n' + details);
                            } else {
                                toastr.success(response.message);
                            }
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Sorular çekilirken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i> Soruları Çek');
                    });
            });

             $('#questionTable').on('click', '.details-btn', function () {
                var questionId = $(this).data('id');
                showQuestionDetails(questionId);
            });

            function showQuestionDetails(questionId) {
                $.get('@Url.Action("GetQuestionDetails")', { id: questionId })
                    .done(function (response) {
                        console.log(response);
                        if (response.success) {
                            showQuestionDetailsModal(response);
                        } else {
                            console.log(response.message);
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Detaylar yüklenirken hata oluştu.');
                    });
            }

             function showQuestionDetailsModal (data) {

                $("#modalTitle").text("Soru Detayları - "+data.question.questionId);
                $("#creationDate").val(data.question.creationDate);
                $("#answeredDateMessage").val(data.question.answeredDateMessage);
                $("#productName").val(data.question.productName);
                $("#status").val(data.question.status);
                $("#text").val(data.question.text);
                $("#answer").val(data.question.answer?.text);
                $("#questionId").val(data.question.questionId);

                if(data.question.status=="Cevap Bekleniyor"){
                    $("#answer").prop("readonly",false);
                    $("#btnSave").css("display","block");
                }

                var modal = new bootstrap.Modal(document.getElementById('questionDetailModal'));
                modal.show();

                $('#questionDetailModal').on('hidden.bs.modal', function () {
                    $(this).remove();
                });
            }

            $("#btnSave").click(function (e) {
                e.preventDefault();
                var questionId = $("#questionId").val();
                var response = $("#answer").val();

                 var url = '@Url.Action("Reply")';

                var data =  { questionId: questionId,answer: answer};

                 $.post(url, data)
                    .done(function (response) {
                        if (response.success) {
                            table.ajax.reload();
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    })
                    .fail(function () {
                        toastr.error('Sorular cevaplanırken hata oluştu.');
                    })
                    .always(function () {
                        $btn.prop('disabled', false).html('<i class="fas fa-sync"></i> Soruları Çek');
                    });
            });
        });
    </script>
}