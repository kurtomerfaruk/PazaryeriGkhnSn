@{
    ViewData["Title"] = "Kategori Özellikleri";
}

@model IEnumerable<CategoryAttribute>

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
        <h3 class="content-header-title mb-0 d-inline-block">Kategori Özellik Yönetimi</h3>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="categoryAttributeTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Platform</th>
                    <th>Kategori</th>
                    <th>TR Özellik Id</th>
                    <th>Name</th>
                    <th>Özel</th>
                </tr>
            </thead>
        </table>
    </div>
</div>




@section Scripts {


    <script>
        $(document).ready(function () {
            var table = $('#categoryAttributeTable').DataTable({
                processing: true,
                serverSide: true,
                    dom: 'Bfrtip',
                    buttons: [
                        'excelHtml5',
                        'pdfHtml5'
                    ],
                ajax: {
                    url: '@Url.Action("GetCategoryAttributes")',
                    type: 'POST'
                },
                 drawCallback: function (settings, json) {
                    $('[data-toggle="tooltip"]').tooltip();
                },
                columns: [
                    { data: 'id',name:'id' },
                    { data: 'platform',name:'platform' },
                    { data: 'category',name:'category' },
                    { data: 'categoryAttributeId' ,name:'categoryAttributeId'},
                    { data: 'name' ,name:'name'},
                    { data: 'allowCustom' ,name:'allowCustom'},
                ],
                order: [[0, 'desc']],
                language: {
                    url: '../i18n/tr.json'
                }
            });

            
        });
    </script>
}